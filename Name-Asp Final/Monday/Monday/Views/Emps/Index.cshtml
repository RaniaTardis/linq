@model IEnumerable<Monday.Models.Emp>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post">
      Salary <input name="t1" type="text" />
      <input type="submit" value="search" /> 
</form>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                
                    <img src="~/@item.EImage" width="50" height="50">
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


Count = @ViewBag.count  <br />
Max Salaries = @ViewBag.max <br />
Min Salaries = @ViewBag.min <br />
Average = @ViewBag.avg  <br />

